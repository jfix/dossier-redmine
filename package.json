{
  "name": "pac-toolkit",
  "productName": "PAC Toolkit",
  "author": "jfix",
  "license": "CC0-1.0",
  "version": "1.0.9",
  "description": "A program that provides tools",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "build --mac --win",
    "ship": "build --mac --win -p always"
  },
  "repository": "https://github.com/jfix/pac-toolkit",
  "keywords": [
    "electron"
  ],
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^19.56.2",
    "electron-winstaller": "^2.6.3"
  },
  "dependencies": {
    "7zip-bin-mac": "^1.0.1",
    "dotenv": "^4.0.0",
    "electron-debug": "^1.5.0",
    "electron-json-storage": "^3.0.6",
    "electron-log": "^2.2.14",
    "electron-updater": "^2.21.4",
    "hammerjs": "^2.0.8",
    "jquery": "^3.2.1",
    "jquery-validation": "^1.16.0",
    "load-json-file": "^2.0.0",
    "material-design-icons-iconfont": "^3.0.3",
    "materialize-css": "^0.99.0",
    "semver-compare": "^1.0.0"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "jfix",
        "repo": "pac-toolkit"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ]
    },
    "mac": {
      "target": [
        "zip",
        "dmg"
      ],
      "category": "public.app-category.developer-tools"
    },
    "appId": "oecd.pac.redmine-dossier",
    "files": [
      "**/*",
      "!sample.env"
    ]
  },
  "standard": {
    "globals": [
      "$"
    ]
  }
}
