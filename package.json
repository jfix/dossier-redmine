{
  "name": "dossier-redmine",
  "author": "jfix",
  "license": "CC0-1.0",
  "version": "1.0.0",
  "description": "Dossier Redmine",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/jfix/dossier-redmine",
  "keywords": [
    "electron"
  ],
  "devDependencies": {
    "devtron": "^1.4.0",
    "electron": "~1.6.2",
    "electron-builder": "^19.19.1",
    "electron-winstaller": "^2.6.3"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "electron-json-storage": "^3.0.6",
    "electron-updater": "^2.10.1",
    "hammerjs": "^2.0.8",
    "jquery": "^3.2.1",
    "jquery-validation": "^1.16.0",
    "load-json-file": "^2.0.0",
    "material-design-icons-iconfont": "^3.0.3",
    "materialize-css": "^0.99.0"
  },
  "build": {
    "publish": [{
      "provider": "github",
      "owner": "jfix",
      "repo": "dossier-redmine"
    }],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ]
    },
    "appId": "oecd.pac.redmine-dossier",
    "files": [
      "**/*",
      "!sample.env"
    ]
  },
  "standard": {
    "globals": [
      "$"
    ]
  }
}
